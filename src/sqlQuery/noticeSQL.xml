<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC '-//ibatis.apache.org//DTD Sql Map 2.0//EN' 'http://ibatis.apache.org/dtd/sql-map-2.dtd'>

<sqlMap>

	<typeAlias alias="notice" type="model.NoticeVO" />

	<resultMap id="noticeRes" class="notice">
		<result property="noti_no" column="NOTI_NO"/>
		<result property="noti_date" column="NOTI_DATE"/>
		<result property="noti_subject" column="NOTI_SUBJECT"/>
		<result property="noti_content" column="NOTI_CONTENT"/>
	</resultMap>

	<sql id="notice-select-all">
		SELECT * FROM NOTICE
	</sql>
	
	<sql id="where-notice-no">
		WHERE NOTI_NO = #noti_no#
	</sql>

	<select id="selectNoticeAll" resultMap="noticeRes" parameterClass="int">
		<include refid="notice-select-all" />
		ORDER BY NOTI_NO DESC
	</select>
	
	<insert id="noticeInsertBoard" parameterClass="notice">
		INSERT INTO NOTICE (NOTI_NO, NOTI_DATE, NOTI_SUBJECT, NOTI_CONTENT)
		VALUES (NOTI_NO_SEQ.NEXTVAL, #noti_date#, #noti_subject#, #noti_content#)
	</insert>
	
	<select id="noticeSelectOne" resultMap="noticeRes" parameterClass="int">
		<include refid="notice-select-all" />
		<include refid="where-notice-no" />
	</select>


</sqlMap>