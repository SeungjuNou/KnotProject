<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
    "http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>

	<constant name="struts.multipart.saveDir" value="/tmp"/> 
	<constant name="struts.multipart.maxSize" value="102400000"/> 
	
	<package name="main" extends="struts-default, tiles-default">
		
		<action name="main" class="totalList.ListAction">
			<param name="listName">mainList</param>
			<interceptor-ref name="staticParams"/>
			<interceptor-ref name="params"/>
			<result type="tiles">main</result>
		</action>

	</package>
	
	<package name="other" extends="struts-default, tiles-default">

		<action name="other" class="totalList.ListAction">
			<param name="listName">memberList</param>
			<interceptor-ref name="staticParams"/>
			<interceptor-ref name="params"/>
			<result type="tiles">other</result>
		</action>

		<action name="notice_write" class="write.NoticeWriteAction" method="form">
			<interceptor-ref name="staticParams"/>
			<interceptor-ref name="params"/>
			<result type="tiles">noticeWrite</result>
		</action>
		
		<action name="notice_writeAction" class="write.NoticeWriteAction">
		<interceptor-ref name="staticParams"/>
			<interceptor-ref name="params"/>
			<result type="redirect-action">notice_list</result>
		</action>
		
		<action name="notice_view" class="view.NoticeViewAction">
			<interceptor-ref name="staticParams"/>
			<interceptor-ref name="params"/>
			<result type="tiles">noticeView</result>
		</action>
		
		<action name="mainCat_write" class="write.MainCatWriteAction" method="form">
			<result type="tiles">mainCatWrite</result>
		</action>
		
		<action name="mainCat_writeAction" class="write.MainCatWriteAction">
			<result type="redirect-action">mainCat_list</result>
		</action>
		<!--  수정기능 -->
		<action name="mainCat_modify" class="view.MainCatViewAction">
			<result type="tiles">mainCatWrite</result>
		</action> 

		<action name="mainCat_modifyAction" class="modify.MainCatModifyAction">
			<result type="redirect-action">mainCat_list</result>
		</action>
		<!--  수정기능끝 -->
		<action name="mainCat_view" class="view.MainCatViewAction">
			<interceptor-ref name="staticParams"/>
			<interceptor-ref name="params"/>
			<result type="tiles">mainCatView</result>
		</action>
		
		<action name="mainCatFileDownloadAction" class="view.MainCatViewAction"
			method="download">
			<result name="success" type="stream">
				<param name="contentType">binary/octet-stream</param>
				<param name="inputName">inputStream</param>
				<param name="contentDisposition">${contentDisposition}</param>
				<param name="contentLength">${contentLength}</param>
				<param name="bufferSize">4096</param>
			</result>
		</action>
 
	</package>


	<package name="myPage" extends="struts-default, tiles-default">
		
		<action name="myPage_main" class="totalList.ListAction">
			<param name="listName">memberList</param>
			<interceptor-ref name="staticParams"/>
			<interceptor-ref name="params"/>
			<result type="tiles">myPage</result>
		</action>
		
	</package>
	
	
	<package name="admin" extends="struts-default, tiles-default">
		
		<action name="member_list" class="totalList.ListAction">
			<param name="listName">memberList</param>
			<interceptor-ref name="staticParams"/>
			<interceptor-ref name="params"/>
			<result type="tiles">memberList</result>
		</action>
		
		 <action name="notice_list" class="totalList.ListAction">
			<param name="listName">noticeList</param>
			<interceptor-ref name="staticParams"/>
			<interceptor-ref name="params"/>
			<result type="tiles">others_noticeList</result>
		</action>
		
		<action name="mainCat_list" class="totalList.ListAction">
			<param name="listName">mainCatList</param>
			<interceptor-ref name="staticParams"/>
			<interceptor-ref name="params"/>
			<result type="tiles">categoryList</result>
		</action> 
	</package>
</struts>