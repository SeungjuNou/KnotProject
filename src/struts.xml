<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
    "http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>

	<constant name="struts.multipart.saveDir" value="/tmp"/> 
	<constant name="struts.multipart.maxSize" value="102400000"/> 
	


	<package name="main" extends="struts-default, tiles-default">
		
		<action name="main" class="totalList.ListAction">
			<param name="listName">mainList</param>
			<interceptor-ref name="staticParams"/>
			<interceptor-ref name="params"/>
			<result type="tiles">main</result>
		</action>

	</package>
	






	<package name="other" extends="struts-default, tiles-default">

		<action name="other" class="totalList.ListAction">
			<param name="listName">memberList</param>
			<interceptor-ref name="staticParams"/>
			<interceptor-ref name="params"/>
			<result type="tiles">other</result>
		</action>
 
	</package>



	<!-- ///////////////////////////// -->
	<!-- ///////////////////////////// -->
				<!-- Mypage -->
	<!-- ///////////////////////////// -->
	<!-- ///////////////////////////// -->



	<package name="myPage" extends="struts-default, tiles-default">
		

		<action name="myPage" class="totalList.ListAction">
			<param name="listName">memberList</param>
			<interceptor-ref name="staticParams"/>
			<interceptor-ref name="params"/>
			<result type="tiles">myPage</result>
		</action>

		<!-- myPage - QnA -->
		
		<action name="myPage_qna" class="totalList.ListAction">
			<param name="listName">qnaList</param>
			<interceptor-ref name="staticParams"/>
			<interceptor-ref name="params"/>
			<result type="tiles">myPage_qna</result>
		</action>
		
		 <action name="myPage_qnaForm" class="write.QnaWriteAction" method="form">
			<result type="tiles">myPage_qnaForm</result>
		</action>
		  
		<action name="myPage_qnaWrite" class="write.QnaWriteAction">
			<result type="redirect-action">myPage_qna</result>
		</action>
		
	 	<action name="myPage_qnaView" class="view.QnaViewAction">
			<result type="tiles">myPage_qnaView</result>
		</action>  


		<!-- myPage - FAQ -->
		
		<action name="myPage_faq" class="totalList.ListAction">
			<param name="listName">faqList</param>
			<interceptor-ref name="staticParams"/>
			<interceptor-ref name="params"/>
			<result type="tiles">myPage_faq</result>
		</action>

		
		<!-- myPage - Notice -->

		<action name="myPage_notice" class="totalList.ListAction">
			<param name="listName">noticeList</param>
			<interceptor-ref name="staticParams"/>
			<interceptor-ref name="params"/>
			<result type="tiles">myPage_notice</result>
		</action>
		
		<action name="admin_noticeView" class="view.NoticeViewAction">
			<result type="tiles">admin_noticeView</result>
		</action>

		

		
	</package>



	
	<!-- ///////////////////////////// -->
	<!-- ///////////////////////////// -->
				<!-- Admin -->
	<!-- ///////////////////////////// -->
	<!-- ///////////////////////////// -->

	<package name="admin" extends="struts-default, tiles-default">
		

	 	<interceptors>
	    		<interceptor name="AdminCheck" class="other.AdminCheck"/>
	  	</interceptors>  

		<!-- admin - Member -->
		<action name="admin_member" class="totalList.ListAction">
			<param name="listName">memberList</param>
			<interceptor-ref name="staticParams"/>
			<interceptor-ref name="AdminCheck"/>
			<result name="login">/auth/loginForm.jsp</result>
			<result type="tiles">admin_member</result>
		</action>


		<!-- admin - QnA --> 
		
		<action name="admin_qna" class="totalList.ListAction">
			<param name="listName">qnaList</param>
			<interceptor-ref name="staticParams"/>
			<interceptor-ref name="params"/>
			<result type="tiles">admin_qna</result>
		</action>
		
		 <action name="admin_qnaForm" class="write.QnaWriteAction" method="form">
			<result type="tiles">admin_qnaForm</result>
		</action>
		  
		<action name="admin_qnaWrite" class="write.QnaWriteAction">
			<result type="redirect-action">admin_qna</result>
		</action>
		
	 	<action name="admin_qnaView" class="view.QnaViewAction">
			<result type="tiles">admin_qnaView</result>
		</action>  

		
		<action name="admin_qnaDelete" class="delete.QnaDeleteAction">
         	<result type="redirect-action">admin_qna</result>
      	</action> 



		<!-- admin - FAQ -->
		
		<action name="admin_faq" class="totalList.ListAction">
			<param name="listName">faqList</param>
			<interceptor-ref name="staticParams"/>
			<interceptor-ref name="params"/>
			<result type="tiles">admin_faq</result>
		</action>
		
		<action name="admin_faqForm" class="write.FaqWriteAction" method="form">
			<result type="tiles">admin_faqForm</result>
		</action>

		 <action name="admin_faqWrite" class="write.FaqWriteAction">
			<result type="redirect-action">admin_faq</result>
		</action>
		
		<action name="admin_faqView" class="view.FaqViewAction">
			<result type="tiles">admin_faqView</result>
		</action>

		
		<!-- admin - Notice -->

		<action name="admin_notice" class="totalList.ListAction">
			<param name="listName">noticeList</param>
			<interceptor-ref name="staticParams"/>
			<interceptor-ref name="params"/>
			<result type="tiles">admin_notice</result>
		</action>


		<action name="admin_noticeForm" class="write.NoticeWriteAction" method="form">
			<result type="tiles">admin_noticeForm</result>
		</action>
		
		<action name="admin_noticeWrite" class="write.NoticeWriteAction">
			<result type="redirect-action">admin_notice</result>
		</action>
		

		<action name="admin_noticeView" class="view.NoticeViewAction">
			<result type="tiles">admin_noticeView</result>
		</action>


		<!-- admin - MainCategory -->

		<action name="admin_mainCat" class="totalList.ListAction">
			<param name="listName">mainCatList</param>
			<interceptor-ref name="staticParams"/>
			<interceptor-ref name="params"/>
			<result type="tiles">admin_mainCat</result>
		</action> 

		<action name="admin_mainCatForm" class="write.MainCatWriteAction" method="form">
			<result type="tiles">admin_mainCatForm</result>
		</action>
		
		<action name="admin_mainCatWrite" class="write.MainCatWriteAction">
			<result type="redirect-action">admin_mainCat</result>
		</action>

		<action name="admin_mainCatView" class="view.MainCatViewAction">
			<result type="tiles">admin_mainCatView</result>
		</action>

		<action name="admin_mainCatModifyForm" class="view.MainCatViewAction">
			<result type="chain">admin_mainCatForm</result>
		</action> 

		<action name="admin_mainCatModify" class="modify.MainCatModifyAction">
			<result type="redirect-action">admin_mainCat</result>
		</action>

	</package>

	<!-- ///////////////////////////// -->
	<!-- ///////////////////////////// -->
	<!-- ///////////////////////////// -->
	<!-- ///////////////////////////// -->









	<!-- ///////////////////////////// -->
	<!-- ///////////////////////////// -->
			<!-- Member Authority -->
	<!-- ///////////////////////////// -->
	<!-- ///////////////////////////// -->


	<package name="Member" extends="struts-default, tiles-default">

		<action name="loginForm" class="other.LoginAction" method="loginForm">
			<result type="tiles">loginForm</result>
		</action>

		<action name="login" class="other.LoginAction">
			<result type="redirect-action">main</result>
		</action>

		<action name="logout" class="other.LoginAction" method="logout">
			<result type="tiles">main</result>
		</action>

		<action name="memberForm" class="other.MemberAction" method="form">
			<result type="tiles">memberForm</result>
		</action>

		<action name="memberJoin" class="other.MemberAction">
			<param name="userRequest">memberJoin</param>
			<interceptor-ref name="staticParams"/>
			<result type="redirect-action">main</result>
		</action>

		<action name="memberModifyForm" class="other.MemberAction" method="memberView">
			<result type="chain">memberForm</result>
		</action>

		<action name="memberModify" class="other.MemberAction">
			<param name="userRequest">memberModify</param>
			<interceptor-ref name="staticParams"/>
			<result type="redirect-action">memberForm</result>
		</action>

	</package>

	<!-- ///////////////////////////// -->
	<!-- ///////////////////////////// -->
	<!-- ///////////////////////////// -->
	<!-- ///////////////////////////// -->

</struts>