<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
    "http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>

	<constant name="struts.multipart.saveDir" value="/tmp"/> 
	<constant name="struts.multipart.maxSize" value="102400000"/> 
	


	<package name="main" extends="struts-default, tiles-default">
		
		<action name="main" class="totalList.ListAction">
			<param name="listName">mainList</param>
			<interceptor-ref name="staticParams"/>
			<interceptor-ref name="params"/>
			<result type="tiles">main</result>
		</action>

	</package>
	






	<package name="other" extends="struts-default, tiles-default">

		<action name="other" class="totalList.ListAction">
			<param name="listName">memberList</param>
			<interceptor-ref name="staticParams"/>
			<interceptor-ref name="params"/>
			<result type="tiles">other</result>
		</action>

		
 
	</package>







	<package name="myPage" extends="struts-default, tiles-default">
		
		<action name="myPage" class="totalList.ListAction">
			<param name="listName">memberList</param>
			<interceptor-ref name="staticParams"/>
			<interceptor-ref name="params"/>
			<result type="tiles">myPage</result>
		</action>
		
	</package>




	<package name="Login" extends="struts-default, tiles-default">

		<action name="loginForm" class="other.LoginAction" method="loginForm">
			<result type="tiles">LoginForm</result>
		</action>

		<action name="loginAction" class="other.LoginAction">
			<result type="tiles">main</result>
		</action>

		<action name="logoutAction" class="other.LoginAction" method="logOut">
			<result type="tiles">main</result>
		</action>

	</package>
	
	





	<package name="admin" extends="struts-default, tiles-default">
		
		<action name="memberList" class="totalList.ListAction">
			<param name="listName">memberList</param>
			<interceptor-ref name="staticParams"/>
			<interceptor-ref name="params"/>
			<result type="tiles">memberList</result>
		</action>


		<!-- admin - QnA -->
		
		<action name="admin_qnaList" class="totalList.ListAction">
			<param name="listName">qnaList</param>
			<interceptor-ref name="staticParams"/>
			<interceptor-ref name="params"/>
			<result type="tiles">admin_qnaList</result>
		</action>
		
		 <action name="admin_qnaForm" class="write.QnaWriteAction" method="form">
			<param name="writeName">qnaWrite</param>
			<interceptor-ref name="staticParams"/>
			<interceptor-ref name="params"/>
			<result type="tiles">qnaWrite</result>
		</action>
		  
		<action name="admin_qnaWrite" class="write.QnaWriteAction">
			<param name="writeName">qnaWrite</param>
			<interceptor-ref name="staticParams"/>
			<interceptor-ref name="params"/>
			<result type="redirect-action">admin_qnaList</result>
		</action>
		
		  
	 	<action name="admin_qnaView" class="view.QnaViewAction">
			<param name="writeName">qnaView</param>
			<interceptor-ref name="staticParams"/>
			<interceptor-ref name="params"/>
			<result type="tiles">qnaView</result>
		</action>  



		<!-- admin - FAQ -->
		
    
		<action name="admin_faqList" class="totalList.ListAction">
			<param name="listName">faqList</param>
			<interceptor-ref name="staticParams"/>
			<interceptor-ref name="params"/>
			<result type="tiles">admin_faqList</result>
		</action>
		
		<action name="admin_faqWriteForm" class="write.FaqWriteAction" method="form">
			<result type="tiles">faqWrite</result>
		</action>

		 <action name="admin_faqWriteAction" class="write.FaqWriteAction">
			<result type="redirect-action">admin_faqList</result>
		</action>
		
		<action name="admin_faqView" class="view.FaqViewAction">
			<interceptor-ref name="params"/>
			<result type="tiles">faqView</result>
		</action>

		
		<!-- admin - Notice -->

		<action name="admin_noticeList" class="totalList.ListAction">
			<param name="listName">noticeList</param>
			<interceptor-ref name="staticParams"/>
			<interceptor-ref name="params"/>
			<result type="tiles">others_noticeList</result>
		</action> 

		<action name="admin_noticeForm" class="write.NoticeWriteAction" method="form">
			<interceptor-ref name="staticParams"/>
			<interceptor-ref name="params"/>
			<result type="tiles">noticeWrite</result>
		</action>
		
		<action name="admin_noticeWrite" class="write.NoticeWriteAction">
		<interceptor-ref name="staticParams"/>
			<interceptor-ref name="params"/>
			<result type="redirect-action">notice_list</result>
		</action>
		
		<action name="admin_noticeView" class="view.NoticeViewAction">
			<interceptor-ref name="staticParams"/>
			<interceptor-ref name="params"/>
			<result type="tiles">noticeView</result>
		</action>


	</package>
	
	

</struts>